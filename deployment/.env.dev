
ENVIRONMENT=development
DEBUG=true

LOG_LEVEL=DEBUG
LOG_FORMAT=json
LOG_FILE=logs/app.log

GOOGLE_DRIVE__CREDENTIALS_FILE=credentials/service-account.json
GOOGLE_DRIVE__CLIENT_ID=your-oauth-client-id
GOOGLE_DRIVE__CLIENT_SECRET=your-oauth-client-secret
GOOGLE_DRIVE__MAX_FILE_SIZE_MB=10

MCP_SERVER__HOST=localhost
MCP_SERVER__PORT=9801
MCP_SERVER__REQUEST_TIMEOUT_SECONDS=30
MCP_SERVER__ENABLE_SEARCH=true
MCP_SERVER__ENABLE_EXPORT=true
MCP_SERVER__MAX_CONCURRENT_REQUESTS=10

CACHE__ENABLED=true
CACHE__TTL_SECONDS=300
CACHE__MAX_SIZE=1000