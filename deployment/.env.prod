# Environment
ENV=production

# Google Drive API Configuration
GOOGLE_DRIVE_CREDENTIALS_FILE=deployment/credentials/google_service_account.json

# Logging Configuration
LOG_LEVEL=INFO

# MCP Server Configuration
MCP_SERVER_NAME=MindMup Google Drive Server
MCP_SERVER_VERSION=0.1.0

# HTTP Server Configuration (for Linux deployment)
MCP_MODE=http
MCP_HOST=0.0.0.0
MCP_PORT=9801

# Setting
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
CACHE_ENABLED=true
CACHE_TTL=300